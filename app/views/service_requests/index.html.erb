<%- model_class = ServiceRequest.new.class -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:service_name) %></th>
      <th><%= model_class.human_attribute_name(:serivce_type) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:street_number) %></th>
      <th><%= model_class.human_attribute_name(:street_direction) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:zip) %></th>
      <th><%= model_class.human_attribute_name(:country) %></th>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @service_requests.each do |service_request| %>
      <tr>
        <td><%= link_to service_request.id, service_request_path(service_request) %></td>
        <td><%= service_request.service_name %></td>
        <td><%= service_request.serivce_type %></td>
        <td><%= service_request.status %></td>
        <td><%= service_request.street_number %></td>
        <td><%= service_request.street_direction %></td>
        <td><%= service_request.city %></td>
        <td><%= service_request.zip %></td>
        <td><%= service_request.country %></td>
        <td><%= service_request.date %></td>
        <td><%=l service_request.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_service_request_path(service_request), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      service_request_path(service_request),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_service_request_path,
            :class => 'btn btn-primary' %>
